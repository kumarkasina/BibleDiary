<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/detailsElementBackground"
    android:orientation="vertical"
    android:theme="@style/noactionbar"
    tools:context=".ui.BiblePage.BibleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="4"
            android:src="@drawable/violet_banner"></ImageView>

        <ImageView

            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/ic_action_home"></ImageView>
    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:padding="10dp">

                <TextView
                    android:gravity="center"
                    android:id="@+id/txt_marq1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:fadingEdge="horizontal"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="@string/text"
                    android:textColor="@color/white" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/txt_marq2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/app_name"
                    android:textColor="@color/white">

                </TextView>

            </LinearLayout>

            <TextView
                android:id="@+id/txt_week1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:text="1st WEEK OF ADVENT"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roudedbackground"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_left"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:src="@drawable/ic_chevron_left"></ImageView>
            <ImageView
                android:id="@+id/img_date"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_calendar"></ImageView>
            <TextView
                android:id="@+id/txt_date"
                android:textSize="16sp"
               android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:text="30th Nov, Monday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>


            <ImageView
                android:id="@+id/img_right"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:src="@drawable/ic_chevron_right"></ImageView>
        </LinearLayout>
    </FrameLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="1dp"
        android:id="@+id/horizontal_recycler"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_heading"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:text="Basic Prayer"></TextView>
        <ImageView
            android:id="@+id/img_sound"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:src="@drawable/ic_play_circle_filled"></ImageView>

        <ImageView
            android:id="@+id/img_share"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:src="@drawable/ic_share"></ImageView>
    </LinearLayout>

    <View
        android:background="@color/colorgray"
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <ImageView
        android:id="@+id/uparrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/down_arrow"></ImageView>

    <TextView
        android:layout_marginTop="10dp"
        android:textColor="@color/colorgray"
        android:id="@+id/prayer_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></TextView>





</LinearLayout>